<!DOCTYPE html>
<html lang="en">
<head>
  <title>TinyApp</title>
</head>
<body>
<p>Hello! Welcome to TinyApp, a url shortener for twitterers who like to link long urls and still want space! </p>
<p><a href='/login'>Login</a></p>
<% if (typeof user !== 'undefined') {%>
<form method="POST" action="/logout" id='logout'></form>
<button type='submit' form='logout'>Logout</button>
<% } %>

<p><a href='/register'>Register</a></p>

<table>
  <tr>
    <th>Shortened Key</th>
    <th>Full Url to shortened website</th>
    <th>Views</th>
  </tr>
  <% for (userid in urlDatabase) { %>
    <% for (shortUrl in urlDatabase[userid]) {%>
    <tr>
      <td><a href="<%= `/u/${shortUrl}` %>"><%= shortUrl %></a></td>
      <td><a href='<%= `/u/${shortUrl}` %>'><%= urlDatabase[userid][shortUrl]['longURL']%></a></td>
      <td><%= urlDatabase[userid][shortUrl]['visits']%></td>
    </tr>
    <% }%>
  <%}%>
</table>
</body>
</html>
